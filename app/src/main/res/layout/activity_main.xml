<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_weight="1"
        android:src="@raw/madlibs" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:fontFamily="@font/aclonica"
        android:text="Welcome to Mad Libs! I will ask you to fill in words to complete a story. You won't be able to see the whole story untill you are done filling in all the missing words. That's part of the fun. Click below to get started ..."
        android:textSize="18sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="193dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:onClick="buttonClicked"
        android:text="GET STARTED!" />
</LinearLayout>